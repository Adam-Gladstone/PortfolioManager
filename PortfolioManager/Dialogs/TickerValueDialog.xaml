<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="PortfolioManager.Dialogs.TickerValueDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:PortfolioManager.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical">

        <!--  Ticker  -->
        <TextBox
            x:Name="ticker"
            Margin="0,15,0,15"
            Header="Ticker"
            Text="{x:Bind Path=Ticker, Mode=TwoWay}"
            TextChanged="Ticker_TextChanged" />

        <!--  Value  -->
        <TextBox
            x:Name="value"
            Margin="0,15,0,15"
            Header="Value"
            Text="{x:Bind Path=Value, Mode=TwoWay}"
            TextChanged="Value_TextChanged" />

    </StackPanel>


</Page>
