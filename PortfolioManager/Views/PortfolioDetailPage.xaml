<Page
    x:Class="PortfolioManager.Views.PortfolioDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:PortfolioManager.Core.Models"
    xmlns:oxyplot="using:OxyPlot"
    xmlns:viewmodels="using:PortfolioManager.ViewModels"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">

        <GridView
            x:Name="GridView"
            Margin="0"
            VerticalAlignment="Stretch"
            SelectionMode="None">

            <GridView.ItemsPanel>

                <ItemsPanelTemplate>
                    <VariableSizedWrapGrid
                        ItemHeight="360"
                        ItemWidth="420"
                        Orientation="Horizontal" />
                </ItemsPanelTemplate>

            </GridView.ItemsPanel>

            <!--  Pie Series  -->
            <GridViewItem
                Margin="0,0,20,20"
                Padding="0"
                CornerRadius="4">

                <GridViewItem.Transitions>

                    <TransitionCollection>
                        <RepositionThemeTransition />
                    </TransitionCollection>

                </GridViewItem.Transitions>

                <Grid
                    Width="400"
                    Height="340"
                    Margin="0"
                    CornerRadius="4"
                    RowDefinitions="auto, *">
                    <Border
                        Grid.RowSpan="10"
                        Margin="0"
                        Background="{ThemeResource SystemAccentColor}"
                        BorderThickness="0"
                        Opacity=".2" />
                    <Border
                        Margin="0"
                        Background="{ThemeResource SystemAccentColor}"
                        BorderThickness="0"
                        Opacity=".5" />

                    <TextBlock
                        Margin="10,5"
                        Padding="0"
                        HorizontalAlignment="Stretch"
                        FontSize="16"
                        Text="Portfolio Allocation" />

                    <oxyplot:PlotView
                        Grid.Row="1"
                        Background="Transparent"
                        Model="{x:Bind ViewModel.PortfolioWeightsModel}" />

                </Grid>

            </GridViewItem>

            <!--  Line Series  -->
            <GridViewItem
                Margin="0,0,20,20"
                Padding="0"
                CornerRadius="4">
                <GridViewItem.Transitions>
                    <TransitionCollection>
                        <RepositionThemeTransition />
                    </TransitionCollection>
                </GridViewItem.Transitions>
                <Grid
                    Width="400"
                    Height="340"
                    Margin="0"
                    CornerRadius="4"
                    RowDefinitions="auto, *">
                    <Border
                        Grid.RowSpan="10"
                        Margin="0"
                        Background="{ThemeResource SystemAccentColor}"
                        BorderThickness="0"
                        Opacity=".2" />
                    <Border
                        Margin="0"
                        Background="{ThemeResource SystemAccentColor}"
                        BorderThickness="0"
                        Opacity=".5" />

                    <TextBlock
                        Margin="10,5"
                        Padding="0"
                        HorizontalAlignment="Stretch"
                        FontSize="16"
                        Text="Historical Performance Assets" />

                    <oxyplot:PlotView
                        Grid.Row="1"
                        Background="Transparent"
                        Model="{x:Bind ViewModel.HistoricPerformanceAssetsModel}" />
                </Grid>
            </GridViewItem>

            <!--  Stem Series  -->
            <GridViewItem
                Margin="0,0,20,20"
                Padding="0"
                CornerRadius="4">
                <GridViewItem.Transitions>
                    <TransitionCollection>
                        <RepositionThemeTransition />
                    </TransitionCollection>
                </GridViewItem.Transitions>
                <Grid
                    Width="400"
                    Height="340"
                    Margin="0"
                    CornerRadius="4"
                    RowDefinitions="auto, *">
                    <Border
                        Grid.RowSpan="10"
                        Margin="0"
                        Background="{ThemeResource SystemAccentColor}"
                        BorderThickness="0"
                        Opacity=".2" />
                    <Border
                        Margin="0"
                        Background="{ThemeResource SystemAccentColor}"
                        BorderThickness="0"
                        Opacity=".5" />

                    <TextBlock
                        Margin="10,5"
                        Padding="0"
                        HorizontalAlignment="Stretch"
                        FontSize="16"
                        Text="Risk vs. Reward" />

                    <oxyplot:PlotView
                        Grid.Row="1"
                        Margin="5"
                        Background="Transparent"
                        Model="{x:Bind ViewModel.RiskRewardModel}" />
                </Grid>
            </GridViewItem>

            <!--  Bar Series  -->
            <GridViewItem
                Margin="0,0,20,20"
                Padding="0"
                CornerRadius="4">

                <GridViewItem.Transitions>

                    <TransitionCollection>
                        <RepositionThemeTransition />
                    </TransitionCollection>

                </GridViewItem.Transitions>

                <Grid
                    Width="400"
                    Height="340"
                    Margin="0"
                    CornerRadius="4"
                    RowDefinitions="auto, *">
                    <Border
                        Grid.RowSpan="10"
                        Margin="0"
                        Background="{ThemeResource SystemAccentColor}"
                        BorderThickness="0"
                        Opacity=".2" />
                    <Border
                        Margin="0"
                        Background="{ThemeResource SystemAccentColor}"
                        BorderThickness="0"
                        Opacity=".5" />

                    <TextBlock
                        Margin="10,5"
                        Padding="0"
                        HorizontalAlignment="Stretch"
                        FontSize="16"
                        Text="Sharpe Ratio" />

                    <oxyplot:PlotView
                        Grid.Row="1"
                        Background="Transparent"
                        Model="{x:Bind ViewModel.SharpeRatioModel}" />
                </Grid>
            </GridViewItem>

            <!--  Line Series  -->
            <GridViewItem
                Margin="0,0,20,20"
                Padding="0"
                CornerRadius="4">
                <GridViewItem.Transitions>
                    <TransitionCollection>
                        <RepositionThemeTransition />
                    </TransitionCollection>
                </GridViewItem.Transitions>
                <Grid
                    Width="400"
                    Height="340"
                    Margin="0"
                    CornerRadius="4"
                    RowDefinitions="auto, *">
                    <Border
                        Grid.RowSpan="10"
                        Margin="0"
                        Background="{ThemeResource SystemAccentColor}"
                        BorderThickness="0"
                        Opacity=".2" />
                    <Border
                        Margin="0"
                        Background="{ThemeResource SystemAccentColor}"
                        BorderThickness="0"
                        Opacity=".5" />

                    <TextBlock
                        Margin="10,5"
                        Padding="0"
                        HorizontalAlignment="Stretch"
                        FontSize="16"
                        Text="Portfolio vs Benchmark" />

                    <oxyplot:PlotView
                        Grid.Row="1"
                        Background="Transparent"
                        Model="{x:Bind ViewModel.ComparativeReturnsModel}" />
                </Grid>
            </GridViewItem>

            <!--  Stem Series  -->
            <GridViewItem
                Margin="0,0,20,20"
                Padding="0"
                CornerRadius="4">
                <GridViewItem.Transitions>
                    <TransitionCollection>
                        <RepositionThemeTransition />
                    </TransitionCollection>
                </GridViewItem.Transitions>
                <Grid
                    Width="400"
                    Height="340"
                    Margin="0"
                    CornerRadius="4"
                    RowDefinitions="auto, *">
                    <Border
                        Grid.RowSpan="10"
                        Margin="0"
                        Background="{ThemeResource SystemAccentColor}"
                        BorderThickness="0"
                        Opacity=".2" />
                    <Border
                        Margin="0"
                        Background="{ThemeResource SystemAccentColor}"
                        BorderThickness="0"
                        Opacity=".5" />

                    <TextBlock
                        Margin="10,5"
                        Padding="0"
                        HorizontalAlignment="Stretch"
                        FontSize="16"
                        Text="Portfolio Risk-Reward" />

                    <oxyplot:PlotView
                        Grid.Row="1"
                        Margin="5"
                        Background="Transparent"
                        Model="{x:Bind ViewModel.ComparativeRiskRewardModel}" />
                </Grid>
            </GridViewItem>

        </GridView>

    </Grid>
</Page>
